<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardElevation="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:padding="12dp">

        <TextView
            android:id="@+id/tvReminderTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reminder Title"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="48dp"/>

        <TextView
            android:id="@+id/tvReminderTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="08:00"
            android:layout_below="@id/tvReminderTitle"
            android:textColor="@android:color/holo_blue_dark"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="48dp"/>

        <TextView
            android:id="@+id/tvReminderRepeat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Daily"
            android:layout_below="@id/tvReminderTime"
            android:layout_alignParentStart="true"
            android:textColor="@android:color/darker_gray"
            android:layout_marginEnd="48dp"/>

        <TextView
            android:id="@+id/tvReminderStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enabled"
            android:layout_below="@id/tvReminderRepeat"
            android:layout_alignParentStart="true"
            android:textColor="@android:color/holo_green_dark"
            android:textStyle="bold"
            android:layout_marginEnd="48dp"/>

        <ImageButton
            android:id="@+id/btnReminderMenu"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@android:drawable/ic_menu_more"
            android:background="@android:color/transparent"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:contentDescription="Menu"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView> 