<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardElevation="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:padding="12dp">

        <TextView
            android:id="@+id/tvAccountName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Account Name"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="48dp"/>

        <TextView
            android:id="@+id/tvAccountType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cash"
            android:layout_below="@id/tvAccountName"
            android:layout_alignParentStart="true"
            android:textColor="@android:color/holo_blue_dark"
            android:layout_marginEnd="48dp"/>

        <TextView
            android:id="@+id/tvAccountBalance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Balance: 1,000,000"
            android:layout_below="@id/tvAccountType"
            android:layout_alignParentStart="true"
            android:textColor="@android:color/holo_green_dark"
            android:layout_marginEnd="48dp"/>

        <ImageView
            android:id="@+id/ivAccountIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/ic_menu_info_details"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:contentDescription="Account Icon"/>

        <ImageButton
            android:id="@+id/btnAccountMenu"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@android:drawable/ic_menu_more"
            android:background="@android:color/transparent"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:contentDescription="Menu"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"/>

    </RelativeLayout>
</androidx.cardview.widget.CardView> 